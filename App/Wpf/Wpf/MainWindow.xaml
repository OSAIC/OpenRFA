<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="OpenRFA REST Test" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <DockPanel x:Name="dockMain" LastChildFill="False" Margin="93,40,105,32">
            <StackPanel Height="347" VerticalAlignment="Top" Width="175">
                <TextBox x:Name="inputGuid" TextWrapping="Wrap" Margin="0,0,0,10" Height="23"/>
                <Button x:Name="btnInputGuid" Content="Search By GUID" Margin="0,0,0,40" Click="btnInputGuid_Click"/>
                <TextBlock x:Name="txtSidebar" TextWrapping="Wrap" Padding="5" Margin="0" VerticalAlignment="Top"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Right" Margin="0,0,0,0.2" Width="396" DockPanel.Dock="Right">
                <TextBlock x:Name="txtRawData" TextWrapping="Wrap" Margin="0,0,0,0" DockPanel.Dock="Right" VerticalAlignment="Top" Padding="5"/>
            </ScrollViewer>
        </DockPanel>
        <StackPanel x:Name="pnlLogin" Height="205" Width="308" Margin="242,115,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden">
            <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" TabIndex="1" Padding="5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,30" VerticalAlignment="Top" VerticalContentAlignment="Center" TabIndex="2" Padding="5"/>
            <Button x:Name="btnSubmit" Content="Login" Height="33" VerticalAlignment="Top" Click="btnSubmit_Click" TabIndex="3" IsDefault="True" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>

